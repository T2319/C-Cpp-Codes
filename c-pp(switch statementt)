#include <iostream>
using namespace std;
int main()
{
	float a,b;
	char op;
	cout<<"Enter any two numbers"<<endl;
	cin>>a;
	cin>>b;
	cout<<"Enter any operand (+,-,*,/)"<<endl;
	cin>>op;
	switch (op)
	{
		case'+':
			cout<<"the sum of numbers is "<<a+b<<endl;
			break;
		case'-':
		    cout<<"the subtraction of number is "<<a-b<<endl;
		    break;
	    case'*':
	    	cout<<"the product of two numbers is"<<a*b<<endl;
	    	break;
	    case'/':
		    cout<<"the division of numbers is"<<a/b<<endl;		
		default:
		    cout<<"wrong operator"<<endl;    
	}

	return 0;
}
